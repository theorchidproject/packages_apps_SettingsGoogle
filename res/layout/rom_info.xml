<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_vertical"
    android:id="@+id/rom_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/aboutphone11_lottie"
        android:layout_width="100dp"
        android:layout_height="205dp"
        android:layout_marginTop="30.0dip"
        android:layout_marginBottom="36.0dip"
        android:layout_marginStart="30.0dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:clickable="false"
        app:lottie_rawRes="@raw/aboutphone11"
        app:lottie_loop="true"
        app:lottie_autoPlay="true" />

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="42dp"
        android:layout_marginEnd="26dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/aboutphone11_lottie">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:textSize="16sp"
            android:text="Phone Specs"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textSize="14.0sp"
            android:text="Snap 750G"
            android:textStyle="bold" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:textSize="14.0sp"
            android:text="RAM 6gb"
            android:textStyle="bold" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:textSize="12.0sp"
            android:text="Gauguin European"
            android:textStyle="bold" />

    </LinearLayout>
</RelativeLayout>
